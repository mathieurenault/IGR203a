<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <igr203a.carteinteractive.TTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notre Carte"
        android:textAlignment="center"
        android:textSize="45dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <igr203a.carteinteractive.BButton
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/serveurButton"
        android:text="Appel Serveur"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/waitericon"
        android:drawableStart="@drawable/waitericon"
        android:textColor="@color/grey"
        android:textSize="12dp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/centralLayout"
        android:layout_below="@+id/textView"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ChoixLayout"
            android:layout_marginLeft="-1dp"
            android:layout_gravity="center_vertical">


            <igr203a.carteinteractive.BButtonClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entreeButton"
                android:text="EntrÃ©e"
                android:background="@drawable/buttonshape2"
                android:textColor="@color/colorChangement"
                />

            <igr203a.carteinteractive.BButtonClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platButton"
                android:text="Plats"
                android:background="@drawable/buttonshape3"
                android:textColor="#FFFFFF"
                />

            <igr203a.carteinteractive.BButtonClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dessertButton"
                android:text="Desserts"
                android:background="@drawable/buttonshape3"
                android:textColor="#FFFFFF"
                />

            <igr203a.carteinteractive.BButtonClass
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boissonButton"
                android:text="Boissons"
                android:background="@drawable/buttonshape4"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:drawSelectorOnTop="false"
            />

    </LinearLayout>







</RelativeLayout>