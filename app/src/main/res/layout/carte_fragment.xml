<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <igr203a.carteinteractive.TTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notre Carte"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="#630202"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/centralLayout"
        android:layout_above="@+id/serveurButton"
        android:layout_below="@+id/textView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ChoixLayout">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entreeButton"
                android:text="EntrÃ©e"
                android:background="@drawable/buttonshape2"
                android:textColor="#FFFFFF"
                android:layout_marginTop="50dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/platButton"
                android:text="Plats"
                android:background="@drawable/buttonshape2"
                android:textColor="#FFFFFF"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dessertButton"
                android:text="Desserts"
                android:background="@drawable/buttonshape2"
                android:textColor="#FFFFFF"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boissonButton"
                android:text="Boissons"
                android:background="@drawable/buttonshape2"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:drawSelectorOnTop="false"
            />

    </LinearLayout>




    <igr203a.carteinteractive.BButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serveurButton"
        android:text="Appel Serveur"
        android:background="@drawable/buttonshape"
        android:drawableLeft="@drawable/waitericon"
        android:textColor="#630202"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>