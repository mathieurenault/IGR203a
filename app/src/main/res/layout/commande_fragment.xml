<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <igr203a.carteinteractive.TTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Commande"
        android:textSize="45dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp" />

    <igr203a.carteinteractive.TTextViewItem
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total : "
        android:textColor="@color/grey"
        android:textSize="30dp"
        android:id="@+id/textViewtotal"
        android:layout_below="@id/textView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 â‚¬"
        android:id="@+id/total"
        android:textColor="@color/grey"
        android:layout_toRightOf="@+id/textViewtotal"
        android:layout_alignBottom="@+id/textViewtotal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

    <igr203a.carteinteractive.BButtonClass
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/validButton"
        android:text="Valider"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/grey"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="5dp"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:drawSelectorOnTop="false"
        android:layout_below="@+id/textViewtotal" />



</RelativeLayout>